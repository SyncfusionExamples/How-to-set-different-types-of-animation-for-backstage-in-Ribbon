<UserControl
    x:Class="BackStage.Information"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BackStage"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <UserControl.DataContext>
        <local:ViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BackStage;component/Assets/Ribbon/PathIcon.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="5,10"
            FontSize="20"
            FontWeight="Bold"
            Text=" Information about Document 1" />
        <Rectangle
            Grid.Row="1"
            Height="1"
            Margin="0,10"
            Stroke="LightGray"
            StrokeDashArray="1"
            StrokeThickness="1" />
        <Grid Grid.Row="2" Margin="20,10,10,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <syncfusion:ButtonAdv
                Command="local:RibbonCommand.ButtonCommand"
                IconHeight="48"
                IconWidth="48"
                Label="Protect Document"
                IconTemplate="{StaticResource Security}"
                SizeMode="Large" />
            <Grid Grid.Column="1" Margin="20,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock FontWeight="Bold" Text="Permissions" />
                <TextBlock
                    Grid.Row="1"
                    Margin="0,10"
                    Text="Any one can open, copy and change any part of this document." />
            </Grid>
        </Grid>
        <Grid Grid.Row="3" Margin="20,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <syncfusion:ButtonAdv
                Command="{Binding Path=InfoBackStageCloseCommand}"
                IconHeight="48"
                IconWidth="48"
                Label="Close Backstage"
                IconTemplate="{StaticResource CloseTab}"
                SizeMode="Large" />
            <Grid Grid.Column="1" Margin="20,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock FontWeight="Bold" Text="Cancel Backstage Close " />
                <CheckBox
                    x:Name="InInfo_BackStageClosingCheckBox"
                    Grid.Row="1"
                    Margin="0,10"
                    Content="The event helps to cancel the Backstage closing operation."
                    IsChecked="{Binding CancelBackStageClosingInInfoTab}" />
            </Grid>
        </Grid>
        <Rectangle
            Grid.Row="4"
            Height="1"
            Margin="0,10"
            Stroke="LightGray"
            StrokeDashArray="1"
            StrokeThickness="1" />
    </Grid>
</UserControl>
