<UserControl
    x:Class="BackStage.New"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BackStage"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <UserControl.DataContext>
        <local:ViewModel />
    </UserControl.DataContext>
    <Grid Margin="10,0">
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="30"
                Text="New" />
            <syncfusion:SfTextBoxExt
                Width="450"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                FontSize="15"
                FontWeight="Light"
                Watermark="Search here for online templates" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="0,5,0,0" Text="Suggested searches:" />
                <TextBlock Margin="10,5,0,0" Text="Business" />
                <TextBlock Margin="10,5,0,0" Text="Letters" />
                <TextBlock Margin="10,5,0,0" Text="Education" />
                <TextBlock Margin="10,5,0,0" Text="Resumes and Cover Letters" />
            </StackPanel>
            <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                <Button
                    Width="160"
                    Height="220"
                    Command="local:RibbonCommand.ButtonCommand">
                    <StackPanel Orientation="Vertical">
                        <Image
                            Width="180"
                            Height="180"
                            Margin="0,5,0,0"
                            Source="/BackStage;component/Assets/Ribbon/blankpage.png" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            Text="Blank document" />
                    </StackPanel>
                </Button>
                <Button
                    Width="160"
                    Height="220"
                    Margin="30,0,0,0"
                    Command="local:RibbonCommand.ButtonCommand">
                    <StackPanel Orientation="Vertical">
                        <Image
                            Width="180"
                            Height="180"
                            Margin="0,5,0,0"
                            Source="/BackStage;component/Assets/Ribbon/welcome-to-word.png" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            Text="Welcome to Word" />
                    </StackPanel>
                </Button>
                <Button
                    Width="160"
                    Height="220"
                    Margin="30,0,0,0"
                    Command="local:RibbonCommand.ButtonCommand">
                    <StackPanel Orientation="Vertical">
                        <Image
                            Width="180"
                            Height="180"
                            Margin="0,5,0,0"
                            Source="/BackStage;component/Assets/Ribbon/single-spaced.png" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            Text="Single spaced" />
                    </StackPanel>
                </Button>
                <Button
                    Width="160"
                    Height="220"
                    Margin="30,0,0,0"
                    Command="local:RibbonCommand.ButtonCommand">
                    <StackPanel Orientation="Vertical">
                        <Image
                            Width="180"
                            Height="180"
                            Margin="0,5,0,0"
                            Source="/BackStage;component/Assets/Ribbon/blue-grey-resume.png" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            Text="Blue grey Resume" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
